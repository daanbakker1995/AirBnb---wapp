@page
@model AirBnb.Pages.Listings.IndexModel

@{
    ViewData["Title"] = "Listings";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].HostName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Neighbourhood)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Latitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Longitude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].NumberOfReviews)
            </th>
            <th>
            <th>
                @Html.DisplayNameFor(model => model.Listing[0].Availability365)
            </th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Listing) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HostName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Neighbourhood)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfReviews)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availability365)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
